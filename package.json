{
  "name": "simple-payment-api",
  "version": "0.0.1",
  "description": "API for simple payments app",
  "author": "Yovany Suarez Silva",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start && npx pre-start.cjs --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prepare": "husky",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "rimraf coverage .nyc_output && concurrently 'npm:tests:unit' 'npm:tests:e2e' --success first --kill-others --kill-others-on-fail && tsx scripts/global-test-coverage.ts",
    "global-test-coverage": "tsx scripts/global-test-coverage.ts",
    "test:watch": "jest --watch",
    "test:cov": "rimraf coverage .nyc_output && jest --coverage && tsx scripts/global-test-coverage.ts",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./tests/e2e/jest-e2e.json",
    "tests:unit": "jest --config ./tests/unit/jest-unit.json",
    "tests:e2e": "jest --config ./tests/e2e/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "fastify": "^5.2.2",
    "fs-extra": "^11.3.0",
    "nyc": "^17.1.0",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.15",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.16",
    "@types/express": "^5.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "prettier-eslint": "^16.3.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.1.3"
  }
}